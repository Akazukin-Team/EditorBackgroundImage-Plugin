<idea-plugin>
    <id>org.akazukin.editorBackgroundImage</id>
    <name>Editor Background Image</name>
    <version>1.1.1</version>
    <vendor
        email="akazukin.team+intellij-background@gmail.com"
        url="https://github.com/Akazukin-Team/EditorBackgroundImage-Plugin">
        Akazukin-Team
    </vendor>

    <description><![CDATA[
      Set the editor background to a random picture from a folder or selected picture.
    ]]></description>

    <change-notes>
        <![CDATA[
            <html>
                <a target="_blank" href="https://github.com/Akazukin-Team/EditorBackgroundImage/compare/1c8bb286a80a568feff776f793bf68f4ba9692a3...1.0.0"><h2>1.0.0 - 2024/11/9</a>
                <ul>
                    <li>
                        First release
                    </li>
                </ul>

                <a target="_blank" href="https://github.com/Akazukin-Team/EditorBackgroundImage/compare/1.0.0...1.1.0"><h2>1.1.0 - 2024/11/9</a>
                <ul>
                    <li>
                        <a target="_blank" href="https://github.com/Akazukin-Team/EditorBackgroundImage/compare/219b60d39eefa06926d64bfd4f61ec38c43596d3...779c8b96785e3785f641d1aa9af78f5905a8c53c">2024/11/9</a> - Added hierarchical setting
                    </li>
                </ul>

                <a target="_blank" href="https://github.com/Akazukin-Team/EditorBackgroundImage/compare/1.1.0...1.1.1"><h2>1.1.1 - 2024/11/9</a>
                <ul>
                    <li>
                        <a target="_blank" href="https://github.com/Akazukin-Team/EditorBackgroundImage/compare/8f32c0e3903465190c279371eb2ec0916d2aca42...c2319d8cb33d56c6f870bf2637d4a670db7b594b">2024/11/9</a> - Remove bundled plugin
                    </li>
                    <li>
                        <a target="_blank" href="https://github.com/Akazukin-Team/EditorBackgroundImage/compare/2d828f699274219a7b19a37d309155bf7f4db8c6...9809fc26e67c1975e6e43e05f7af1f95449ae2bf">2024/11/9</a> - Fix form layout
                    </li>
                    <li>
                        <a target="_blank" href="https://github.com/Akazukin-Team/EditorBackgroundImage/compare/ad1e13de58cf5cff568899856cac36ce4142b653...ac51f6fbd0d71ec4f5beafac0e6b00a75205cb2d">2024/11/9</a> - Fix form layout
                    </li>
                </ul>
            </html>
        ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="180"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->

    <!-- uncomment to enable plugin in all products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="org.akazukin.intellij.background.listener.ProjectActivityImpl"/>

        <applicationConfigurable groupId="appearance" groupWeight="20" id="editor.background.image"
                                 displayName="Editor Background Image"
                                 instance="org.akazukin.intellij.background.gui.Settings"/>

        <applicationService serviceImplementation="org.akazukin.intellij.background.config.Config"/>
    </extensions>

    <actions>
        <action id="randomBackgroundImage"
                class="org.akazukin.intellij.background.actions.SetBackground"
                text="Set Background To Random Image">
        </action>

        <action id="clearBackgroundImage"
                class="org.akazukin.intellij.background.actions.ClearBackground"
                text="Clear Background Image">
        </action>

        <action id="cacheBackgroundImage"
                class="org.akazukin.intellij.background.actions.CacheBackgroundImages"
                text="Cache Background Images">
        </action>

        <group id="editorBackgroundImage" text="Editor Background Image" description="Editor Background Image"
               popup="true">
            <reference ref="randomBackgroundImage"/>
            <reference ref="clearBackgroundImage"/>
            <reference ref="cacheBackgroundImage"/>
            <add-to-group group-id="ViewMenu" anchor="last"/>
        </group>
    </actions>

</idea-plugin>
